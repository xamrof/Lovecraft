{
  "name": "lovecraft-portal",
  "version": "1.0.0",
  "description": "A minimalist Lovecraftian access portal built with Electron.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --windows portable",
    "pack": "electron-builder --dir",
    "build": "electron-builder",
    "make-portable": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/make-portable.ps1"
  },
  "keywords": [
    "electron",
    "lovecraft",
    "kiosk"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12"
  }
  ,
  "build": {
    "appId": "com.xamrof.lovecraft",
    "productName": "Lovecraft",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!dist",
      "!dist-**",
      "!**/win-unpacked/**",
      "!**/*.map",
      "!.git/**"
    ],
    
    "win": {
      "target": [
        {
          "target": "portable"
        }
      ]
    }
  }
}
